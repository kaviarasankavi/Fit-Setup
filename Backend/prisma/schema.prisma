datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Exercise {
  id           Int       @id @default(autoincrement())
  name         String
  category     Category   @default(GENERAL)
  type         ExerciseType?
  equipment    String?    // e.g. "Barbell", "Dumbbell", "Bodyweight"
  muscleGroup  MuscleGroup?
  difficulty   Difficulty? @default(MEDIUM)
  instructions String?
  imageUrl     String?
  videoUrl     String?
  createdAt    DateTime   @default(now())
}

enum Category {
  STRENGTH
  CARDIO
  FLEXIBILITY
  FUNCTIONAL
  GENERAL
  CORE
}

enum ExerciseType {
  MACHINE
  FREE_WEIGHT
  BODYWEIGHT
  RESISTANCE_BAND
}

enum MuscleGroup {
  CHEST
  BACK
  SHOULDERS
  LEGS
  ARMS
  CORE
  FULL_BODY
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

